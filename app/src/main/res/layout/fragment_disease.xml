<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disease_title_label"/>

    <EditText
        android:id="@+id/disease_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/disease_title_hint"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disease_details_label"/>

    <Button
        android:id="@+id/disease_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/disease_cured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disease_cured_label"/>
</LinearLayout>
