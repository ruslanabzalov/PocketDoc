<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название лекарства"/>

        <EditText
            android:id="@+id/medicament_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:hint="Введите название лекарства"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ применения"/>

        <Button
            android:id="@+id/use_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите способ применения"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продолжительность в днях"/>

        <Button
            android:id="@+id/duration_in_days_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Продолжительность"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дозировка"/>

        <Button
            android:id="@+id/dosage_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите дозировку"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Напоминать"/>

        <Button
            android:id="@+id/hourly_gaps_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Каждые X часов"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Первый приём"/>

        <Button
            android:id="@+id/first_reception_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Время первого приёма"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Последний приём"/>

        <Button
            android:id="@+id/second_reception_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Время последнего приёма"/>

        <Button
            android:id="@+id/set_notification_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Сохранить"/>
    </LinearLayout>
</ScrollView>