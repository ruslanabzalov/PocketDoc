<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ruslan.pocketdoc">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".searching.specialities.SpecialitiesActivity"
            android:label="@string/title_specialities_list"/>
        <activity
            android:name=".searching.stations.StationsActivity"
            android:label="@string/title_stations_list"/>
        <activity
            android:name=".searching.doctors.DoctorsActivity"
            android:label="@string/title_doctors_list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".searching.doctor.DoctorActivity"
            android:label="@string/title_doctor_info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".searching.records.NewRecordActivity"
            android:label="@string/title_record_creation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".searching.records.history.RecordsHistoryActivity"
            android:label="@string/title_records_history"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key"/>
    </application>

</manifest>